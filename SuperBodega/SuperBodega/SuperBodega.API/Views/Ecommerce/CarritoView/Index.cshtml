@model SuperBodega.API.DTOs.Ecommerce.CarritoDTO
@{
    ViewData["Title"] = "Carrito de Compras";
    Layout = "_Layout";
}

@section Menu {
    <partial name="_ClientMenu" />
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0">Mi Carrito de Compras</h1>
    </div>
    
    <div class="alert alert-info mb-4">
        <i class="bi bi-info-circle me-2"></i> Selecciona un cliente para ver su carrito de compras.
    </div>

    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h5 class="card-title mb-0"><i class="bi bi-person me-2"></i>Seleccionar Cliente</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label for="clienteSelect" class="form-label">Cliente</label>
                        <select id="clienteSelect" class="form-select">
                            <option value="">Selecciona un cliente...</option>
                            <!-- Los clientes se cargarán dinámicamente -->
                        </select>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h5 class="card-title mb-0"><i class="bi bi-person-vcard me-2"></i>Información del Cliente</h5>
                </div>
                <div class="card-body">
                    <div id="clienteInfo">
                        <p class="text-muted mb-0">Seleccione un cliente para ver su información</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h5 class="card-title mb-0"><i class="bi bi-cart4 me-2"></i>Productos en el Carrito</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover" id="carritoTable">
                    <thead>
                        <tr>
                            <th>Imagen</th>
                            <th>Producto</th>
                            <th>Precio</th>
                            <th>Cantidad</th>
                            <th>Subtotal</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody id="carritoTableBody">
                        <!-- Los datos se cargarán dinámicamente -->
                        <tr>
                            <td colspan="6" class="text-center">No hay productos en el carrito</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            
            <div class="row mt-4 justify-content-end">
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Resumen</h5>
                            <div class="d-flex justify-content-between mb-2">
                                <span>Subtotal:</span>
                                <span id="subtotal">Q0.00</span>
                            </div>
                            <div class="d-flex justify-content-between">
                                <span class="fw-bold">Total:</span>
                                <span id="total" class="fw-bold">Q0.00</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                <button id="btnVaciarCarrito" class="btn btn-outline-danger" disabled>
                    <i class="bi bi-trash me-2"></i>Vaciar Carrito
                </button>
                <button id="btnRealizarCompra" class="btn btn-primary" disabled>
                    <i class="bi bi-bag-check me-2"></i>Realizar Compra
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/carrito.js"></script>
}