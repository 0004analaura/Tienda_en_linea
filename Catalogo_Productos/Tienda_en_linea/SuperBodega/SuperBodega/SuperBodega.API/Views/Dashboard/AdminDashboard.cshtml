@{
    ViewData["Title"] = "Panel de Administración";
    Layout = "_Layout";
}

@section Menu {
    <partial name="_Menu" />
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h1 class="h3 card-title mb-0">Panel de Administración</h1>
                </div>
            </div>
        </div>
    </div>
    
    <div class="row">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0 me-3">
                            <div class="avatar-sm">
                                <span class="avatar-title bg-primary rounded-circle">
                                    <i class="bi bi-box2 fs-5"></i>
                                </span>
                            </div>
                        </div>
                        <div class="flex-grow-1">
                            <h5 class="mb-1">Productos</h5>
                            <p class="text-muted mb-0">Gestión de inventario</p>
                        </div>
                        <div class="flex-shrink-0">
                            <a href="/Productos/Index" class="btn btn-sm btn-primary">Ver</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0 me-3">
                            <div class="avatar-sm">
                                <span class="avatar-title bg-success rounded-circle">
                                    <i class="bi bi-people fs-5"></i>
                                </span>
                            </div>
                        </div>
                        <div class="flex-grow-1">
                            <h5 class="mb-1">Clientes</h5>
                            <p class="text-muted mb-0">Gestión de clientes</p>
                        </div>
                        <div class="flex-shrink-0">
                            <a href="/Clientes/Index" class="btn btn-sm btn-success">Ver</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0 me-3">
                            <div class="avatar-sm">
                                <span class="avatar-title bg-info rounded-circle">
                                    <i class="bi bi-truck fs-5"></i>
                                </span>
                            </div>
                        </div>
                        <div class="flex-grow-1">
                            <h5 class="mb-1">Proveedores</h5>
                            <p class="text-muted mb-0">Gestión de proveedores</p>
                        </div>
                        <div class="flex-shrink-0">
                            <a href="/Proveedores/Index" class="btn btn-sm btn-info">Ver</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0 me-3">
                            <div class="avatar-sm">
                                <span class="avatar-title bg-warning rounded-circle">
                                    <i class="bi bi-cart fs-5"></i>
                                </span>
                            </div>
                        </div>
                        <div class="flex-grow-1">
                            <h5 class="mb-1">Ventas</h5>
                            <p class="text-muted mb-0">Gestión de ventas</p>
                        </div>
                        <div class="flex-shrink-0">
                            <a href="#" class="btn btn-sm btn-warning">Ver</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>