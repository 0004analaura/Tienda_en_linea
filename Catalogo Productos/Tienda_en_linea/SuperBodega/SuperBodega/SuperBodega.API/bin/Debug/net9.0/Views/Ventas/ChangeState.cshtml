@model SuperBodega.API.Models.Admin.Venta
@using SuperBodega.API.Models.Admin

@{
    ViewData["Title"] = "Cambiar Estado de Venta";
    Layout = "_Layout";
}

@section Menu {
    <partial name="_Menu" />
}

<div class="container-fluid">
    <h1 class="h3 mb-4">Cambiar Estado de Venta #@Model.Id</h1>

    <div class="card shadow">
        <div class="card-body">
            <form asp-action="ChangeState" method="post">
                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label for="Estado" class="form-label">Estado</label>
                    <select asp-for="Estado" class="form-select" asp-items="ViewBag.Estados">
                        <option value="">-- Seleccione Estado --</option>
                    </select>
                    <span asp-validation-for="Estado" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary">Guardar Estado</button>
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
